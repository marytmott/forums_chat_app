<% include ../partials/header %>

  <form action="/posts" method="POST">
    <input type="hidden" name="post[forum]" value="<%= forum._id %>" />
    <input type="hidden" name="post[user]" value="<%= thisUser._id %>" />
    <input type="hidden" name="post[lastActivityUser]" value="<%= thisUser.username %>" />
    <label>
      <input type="text" name="post[title]" placeholder="title of your post" />
    </label>
    <label>
      <textarea name="post[content]" placeholder="Type in here..."></textarea>
    </label>
    <button type="submit">Create New Post</button>
  </form>

<% include ../partials/footer %>